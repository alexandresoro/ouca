{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": ["config:base", ":semanticCommits", ":pinAllExceptPeerDependencies", ":automergePatch"],
  "lockFileMaintenance": {
    "enabled": true
  },
  "labels": ["dependencies"],
  "packageRules": [
    {
      "matchDepTypes": ["devDependencies"],
      "excludePackageNames": ["prisma", "typescript"],
      "matchPackagePatterns": ["*"],
      "matchUpdateTypes": ["minor"],
      "automerge": true
    },
    {
      "matchPackageNames": ["prisma", "@prisma/client"],
      "automerge": false
    },
    {
      "matchPackagePatterns": ["fastify", "mercurius"],
      "matchUpdateTypes": ["major", "minor"],
      "groupName": "fastify major & minor",
      "groupSlug": "fastify"
    }
  ],
  "timezone": "Europe/Paris"
}
