{
  "name": "@ou-ca/monorepo",
  "version": "1.0.0",
  "description": "Où-ça monorepo",
  "contributors": [
    {
      "name": "Camille Carrier"
    },
    {
      "name": "Alexandre Soro"
    }
  ],
  "license": "MIT",
  "private": true,
  "workspaces": [
    "functions",
    "packages/*"
  ],
  "scripts": {
    "prepare": "husky install",
    "build:ci": "wireit",
    "test": "npm --workspaces --if-present test",
    "lint": "npm --workspaces --if-present run lint",
    "frontend": "npm --workspace=packages/frontend run --",
    "backend": "npm --workspace=packages/backend run --"
  },
  "wireit": {
    "build:ci": {
      "dependencies":[
        "rome:ci",
        "lint",
        "test"
      ]
    },
    "rome:ci": {
      "command": "rome ci *",
      "output": []
    }
  },
  "devDependencies": {
    "husky": "8.0.3",
    "lint-staged": "13.1.1",
    "rome": "11.0.0",
    "wireit": "0.9.5"
  },
  "engines": {
    "npm": ">=8"
  }
}
