{
  "name": "@ou-ca/monorepo",
  "version": "1.0.0",
  "description": "Où-ça monorepo",
  "contributors": [
    {
      "name": "Camille Carrier"
    },
    {
      "name": "Alexandre Soro"
    }
  ],
  "license": "MIT",
  "private": true,
  "workspaces": [
    "functions",
    "packages/*"
  ],
  "type": "module",
  "scripts": {
    "prepare": "husky install",
    "test": "npm --workspaces --if-present test",
    "lint": "npm --workspaces --if-present run lint",
    "frontend": "npm --workspace=packages/frontend run --",
    "backend": "npm --workspace=packages/backend run --",
    "check:ci": "wireit",
    "build:ci": "wireit",
    "build:frontend:ci": "wireit"
  },
  "wireit": {
    "build:ci": {
      "dependencies": [
        "build:backend",
        "build:frontend:ci"
      ]
    },
    "build:backend": {
      "command": "npm run backend build"
    },
    "build:frontend:ci": {
      "command": "npm run frontend build",
      "env": {
        "ENABLE_SENTRY": {
          "external": true
        },
        "SENTRY_URL": {
          "external": true
        },
        "SENTRY_AUTH_TOKEN": {
          "external": true
        },
        "SENTRY_ORG": {
          "external": true
        },
        "SENTRY_PROJECT": {
          "external": true
        }
      },
      "files": [
        "packages/{frontend,common}/**",
        "!packages/*/dist/**",
        "!**/node_modules",
        "!**/.wireit"
      ],
      "output": [
        "packages/frontend/dist",
        "packages/common/dist",
        "packages/common/*.tsbuildinfo"
      ]
    },
    "check:ci": {
      "dependencies": [
        "rome:ci",
        "lint",
        "test"
      ]
    },
    "rome:ci": {
      "command": "rome ci *",
      "output": []
    }
  },
  "devDependencies": {
    "husky": "8.0.3",
    "lint-staged": "13.2.2",
    "rome": "12.1.1",
    "wireit": "0.9.5"
  },
  "engines": {
    "npm": ">=8"
  }
}