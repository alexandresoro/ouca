{
  "name": "ouca-backend",
  "version": "1.0.0",
  "description": "Backend for Où-ça",
  "contributors": [
    {
      "name": "Camille Carrier"
    },
    {
      "name": "Alexandre Soro"
    }
  ],
  "license": "MIT",
  "private": true,
  "scripts": {
    "build": "npm run compile:tsc && npm run copy:assets",
    "prepare": "husky install",
    "postinstall": "npm run generate-graphql",
    "start": "npm run compile:swc -- -s && npm run copy:assets && cd dist && node backend",
    "start:tsc": "npm run compile:tsc -- --sourceMap && npm run copy:assets && cd dist && node backend",
    "test": "jest",
    "compile:swc": "swc ./src -d dist",
    "compile:tsc": "tsc --project tsconfig.build.json",
    "lint": "eslint .",
    "prettier:check": "prettier -c .",
    "generate-graphql": "graphql-codegen",
    "copy:assets": "cpy 'src/**/*.graphql' dist"
  },
  "dependencies": {
    "@fastify/compress": "6.1.1",
    "@fastify/cookie": "8.3.0",
    "@fastify/cors": "8.1.0",
    "@fastify/multipart": "7.2.0",
    "@fastify/static": "6.5.0",
    "@prisma/client": "4.4.0",
    "csv-parse": "5.3.1",
    "csv-stringify": "6.2.0",
    "date-fns": "2.29.3",
    "dotenv": "16.0.3",
    "exceljs": "4.3.0",
    "fastify": "4.9.2",
    "graphql": "16.6.0",
    "jose": "4.10.0",
    "mercurius": "11.1.0",
    "pino": "8.7.0",
    "pino-pretty": "9.1.1",
    "proj4": "2.8.0",
    "yargs": "17.6.0"
  },
  "devDependencies": {
    "@graphql-codegen/add": "3.2.1",
    "@graphql-codegen/cli": "2.13.7",
    "@graphql-codegen/typescript": "2.7.5",
    "@graphql-codegen/typescript-resolvers": "2.7.5",
    "@swc/cli": "0.1.57",
    "@swc/core": "1.3.10",
    "@swc/jest": "0.2.23",
    "@types/jest": "29.2.0",
    "@types/node": "16.11.68",
    "@types/proj4": "2.5.2",
    "@types/yargs": "17.0.13",
    "@typescript-eslint/eslint-plugin": "5.40.1",
    "@typescript-eslint/parser": "5.40.1",
    "cpy-cli": "4.2.0",
    "eslint": "8.26.0",
    "eslint-import-resolver-typescript": "3.5.2",
    "eslint-plugin-import": "2.26.0",
    "eslint-plugin-jest": "27.1.3",
    "husky": "8.0.1",
    "jest": "29.2.1",
    "jest-mock-extended": "3.0.1",
    "lint-staged": "13.0.3",
    "prettier": "2.7.1",
    "prisma": "4.4.0",
    "type-fest": "3.1.0",
    "typescript": "4.8.4"
  },
  "engines": {
    "node": ">=16"
  }
}
