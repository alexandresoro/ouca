{
  "name": "ouca-backend",
  "version": "1.0.0",
  "description": "Backend for Où-ça",
  "contributors": [
    {
      "name": "Camille Carrier"
    },
    {
      "name": "Alexandre Soro"
    }
  ],
  "license": "MIT",
  "private": true,
  "scripts": {
    "build": "npm run compile:tsc && npm run copy:assets",
    "prepare": "husky install",
    "postinstall": "npm run generate-graphql",
    "start": "npm run compile:swc -- -s && npm run copy:assets && cd dist && node main",
    "start:tsc": "npm run compile:tsc -- --sourceMap && npm run copy:assets && cd dist && node main",
    "test": "jest",
    "compile:swc": "swc ./src -d dist",
    "compile:tsc": "tsc --project tsconfig.build.json",
    "lint": "eslint .",
    "prettier:check": "prettier -c .",
    "generate-graphql": "graphql-codegen",
    "copy:assets": "node scripts/copy-graphql-schemas-to-dist.mjs"
  },
  "dependencies": {
    "@fastify/compress": "6.2.0",
    "@fastify/cookie": "8.3.0",
    "@fastify/cors": "8.2.0",
    "@fastify/multipart": "7.3.0",
    "@fastify/static": "6.6.0",
    "@prisma/client": "4.6.1",
    "csv-parse": "5.3.3",
    "csv-stringify": "6.2.3",
    "date-fns": "2.29.3",
    "dotenv": "16.0.3",
    "env-var": "7.3.0",
    "exceljs": "4.3.0",
    "fastify": "4.10.2",
    "graphql": "16.6.0",
    "jose": "4.11.1",
    "mercurius": "11.4.0",
    "pino": "8.8.0",
    "pino-pretty": "9.1.1",
    "proj4": "2.8.0",
    "slonik": "33.0.6",
    "slonik-interceptor-field-name-transformation": "1.6.5",
    "zod": "3.20.2"
  },
  "devDependencies": {
    "@graphql-codegen/add": "3.2.3",
    "@graphql-codegen/cli": "2.16.1",
    "@graphql-codegen/typescript": "2.8.5",
    "@graphql-codegen/typescript-resolvers": "2.7.10",
    "@swc/cli": "0.1.59",
    "@swc/core": "1.3.24",
    "@swc/jest": "0.2.24",
    "@types/jest": "29.2.4",
    "@types/node": "18.11.17",
    "@types/proj4": "2.5.2",
    "@typescript-eslint/eslint-plugin": "5.47.0",
    "@typescript-eslint/parser": "5.47.0",
    "cpy": "9.0.1",
    "eslint": "8.30.0",
    "eslint-import-resolver-typescript": "3.5.2",
    "eslint-plugin-import": "2.26.0",
    "eslint-plugin-jest": "27.1.7",
    "husky": "8.0.2",
    "jest": "29.3.1",
    "jest-mock-extended": "3.0.1",
    "lint-staged": "13.1.0",
    "prettier": "2.8.1",
    "prisma": "4.6.1",
    "type-fest": "3.5.0",
    "typescript": "4.9.4"
  },
  "engines": {
    "node": ">=18"
  }
}
