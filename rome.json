{
  "$schema": "./node_modules/rome/configuration_schema.json",
  "linter": {
    "enabled": true,
    "rules": {
      "recommended": true,
      "a11y": {
        "useAltText": "warn"
      },
      "complexity": {
        "useFlatMap": "warn",
        "useOptionalChain": "warn",
        "useSimplifiedLogicExpression": "warn"
      },
      "style": {
        "noUnusedTemplateLiteral": "warn",
        "useSelfClosingElements": "off",
        "useTemplate": "warn"
      }
    }
  },
  "formatter": {
    "enabled": true,
    "indentStyle": "space",
    "lineWidth": 120
  },
  "javascript": {
    "formatter": {
      "trailingComma": "es5"
    }
  },
  "files": {
    "ignore": ["dist", "coverage", "generated", "**/src/gql/**/*", "Dockerfile", "LICENSE", "README", "*.json"]
  }
}
