{
  "$schema": "./node_modules/rome/configuration_schema.json",
  "linter": {
    "enabled": true,
    "rules": {
      "recommended": true,
      "a11y": {
        "useAltText": "warn"
      },
      "suspicious": {
        "noEmptyInterface": "warn"
      },
      "style": {
        "noNonNullAssertion": "warn",
        "useSelfClosingElements": "warn"
      }
    }
  },
  "formatter": {
    "enabled": true,
    "indentStyle": "space",
    "lineWidth": 120
  },
  "javascript": {
    "formatter": {
      "trailingComma": "es5"
    }
  },
  "files": {
    "ignore": ["dist", "coverage", "generated", "Dockerfile", "LICENSE", "README", "**/package.json", "pnpm-*.yaml"]
  }
}
