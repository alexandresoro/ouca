{
  "compilerOptions": {
    "baseUrl": ".",
    "rootDir": "src",
    "outDir": "dist",
    "module": "Node16",
    "lib": ["ES2022"],
    "target": "ES2022",
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "strict": true,
    "paths": {
      "@ou-ca/common/*": ["../common/src/*"]
    },
    "types": ["vitest/globals"]
  },
  "include": ["src/**/*"],
  "references": [{ "path": "../common/tsconfig.ref.json" }]
}
