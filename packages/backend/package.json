{
  "name": "@ou-ca/backend",
  "version": "1.0.0",
  "description": "Où-ça backend",
  "contributors": [
    {
      "name": "Camille Carrier"
    },
    {
      "name": "Alexandre Soro"
    }
  ],
  "license": "MIT",
  "private": true,
  "type": "module",
  "scripts": {
    "build": "npm run compile:tsc && npm run copy:assets",
    "postinstall": "npm run generate-graphql",
    "start": "npm run compile:tsup",
    "start:tsc": "npm run compile:tsc:dev && npm run copy:assets && cd dist && node main",
    "test": "wireit",
    "lint": "wireit",
    "compile:tsc": "tsc --build tsconfig.build.json",
    "compile:tsc:dev": "tsc --build tsconfig.dev.json",
    "compile:tsup": "wireit",
    "generate-graphql": "graphql-codegen",
    "copy:assets": "node scripts/copy-graphql-schemas-to-dist.js",
    "umzug": "cd dist && node umzug"
  },
  "wireit": {
    "compile:tsup": {
      "command": "tsup",
      "service": true,
      "dependencies": ["../common:compile:tsup"],
      "files": [
        "src/**",
        "tsconfig.json",
        "tsup.config.*"
      ]
    },
    "lint": {
      "command": "eslint .",
      "files": [
        "**/*"
      ],
      "output": []
    },
    "test": {
      "command": "vitest run",
      "files": [
        "src/**/*.ts",
        "tsconfig.json"
      ],
      "output": []
    }
  },
  "dependencies": {
    "@fastify/compress": "6.2.0",
    "@fastify/cookie": "8.3.0",
    "@fastify/cors": "8.2.0",
    "@fastify/multipart": "7.4.1",
    "@fastify/static": "6.9.0",
    "@ou-ca/common": "*",
    "csv-parse": "5.3.6",
    "csv-stringify": "6.3.0",
    "date-fns": "2.29.3",
    "dotenv": "16.0.3",
    "es-main": "1.2.0",
    "exceljs": "4.3.0",
    "fastify": "4.14.0",
    "graphql": "16.6.0",
    "jose": "4.13.1",
    "mercurius": "12.2.0",
    "pino": "8.11.0",
    "pino-pretty": "9.4.0",
    "slonik": "33.1.0",
    "slonik-interceptor-field-name-transformation": "1.6.5",
    "umzug": "3.2.1",
    "zod": "3.20.6"
  },
  "devDependencies": {
    "@graphql-codegen/add": "4.0.1",
    "@graphql-codegen/cli": "3.2.1",
    "@graphql-codegen/typescript": "3.0.1",
    "@graphql-codegen/typescript-resolvers": "3.1.0",
    "@ou-ca/eslint-config": "*",
    "@types/node": "18.14.6",
    "@vitest/coverage-c8": "0.29.2",
    "cpy": "9.0.1",
    "tsup": "6.6.3",
    "type-fest": "3.6.1",
    "typescript": "4.9.5",
    "vitest": "0.29.2",
    "vitest-mock-extended": "1.0.9",
    "wireit": "0.9.5"
  },
  "engines": {
    "node": ">=18"
  }
}
