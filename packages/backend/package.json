{
  "name": "@ou-ca/backend",
  "version": "1.0.0",
  "description": "Où-ça backend",
  "contributors": [
    {
      "name": "Camille Carrier"
    },
    {
      "name": "Alexandre Soro"
    }
  ],
  "license": "MIT",
  "private": true,
  "type": "module",
  "scripts": {
    "build": "npm run compile:tsc && npm run copy:assets",
    "postinstall": "npm run generate-graphql",
    "start": "npm run compile:tsup",
    "start:tsc": "npm run compile:tsc:dev && npm run copy:assets && node -r dotenv/config dist/main",
    "test": "wireit",
    "lint": "wireit",
    "compile:tsc": "tsc --build tsconfig.build.json",
    "compile:tsc:dev": "tsc --build tsconfig.dev.json",
    "compile:tsup": "wireit",
    "generate-graphql": "graphql-codegen",
    "copy:assets": "node scripts/copy-graphql-schemas-to-dist.js",
    "umzug": "node dist/umzug",
    "umzug:dev": "node -r dotenv/config dist/umzug"
  },
  "wireit": {
    "compile:tsup": {
      "command": "tsup",
      "service": true,
      "dependencies": [
        "../common:compile:tsup"
      ],
      "files": [
        "src/**",
        "tsconfig.json",
        "tsup.config.*"
      ]
    },
    "lint": {
      "command": "eslint .",
      "files": [
        "**/*"
      ],
      "output": []
    },
    "test": {
      "command": "vitest run",
      "files": [
        "src/**/*.ts",
        "tsconfig.json"
      ],
      "output": []
    }
  },
  "dependencies": {
    "@fastify/compress": "6.4.0",
    "@fastify/cors": "8.3.0",
    "@fastify/multipart": "7.6.0",
    "@fastify/static": "6.10.2",
    "@fastify/under-pressure": "8.2.0",
    "@ou-ca/common": "*",
    "@sentry/node": "7.54.0",
    "@sentry/tracing": "7.54.0",
    "content-disposition": "0.5.4",
    "csv-parse": "5.4.0",
    "csv-stringify": "6.4.0",
    "date-fns": "2.30.0",
    "es-main": "1.2.0",
    "exceljs": "4.3.0",
    "fastify": "4.18.0",
    "fastify-plugin": "4.5.0",
    "graphql": "16.6.0",
    "ioredis": "5.3.2",
    "mercurius": "12.2.0",
    "pino": "8.14.1",
    "pino-pretty": "10.0.0",
    "slonik": "34.0.1",
    "slonik-interceptor-field-name-transformation": "1.6.5",
    "umzug": "3.2.1",
    "zod": "3.21.4"
  },
  "devDependencies": {
    "@graphql-codegen/add": "4.0.1",
    "@graphql-codegen/cli": "3.3.1",
    "@graphql-codegen/typescript": "3.0.4",
    "@graphql-codegen/typescript-resolvers": "3.2.1",
    "@ou-ca/eslint-config": "*",
    "@types/content-disposition": "0.5.5",
    "@types/node": "18.16.17",
    "@vitest/coverage-c8": "0.32.0",
    "cpy": "10.1.0",
    "dotenv": "16.1.4",
    "tsup": "6.7.0",
    "type-fest": "3.11.1",
    "typescript": "5.1.3",
    "vitest": "0.32.0",
    "vitest-mock-extended": "1.1.3",
    "wireit": "0.9.5"
  },
  "engines": {
    "node": ">=18"
  }
}
